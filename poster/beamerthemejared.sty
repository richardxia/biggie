\setbeamercolor{separation line}{bg=berkblue}
\setbeamercolor{lower separation line foot}{bg=berkblue}
\setbeamercolor{title in headline}{fg=berkblue}
\setbeamercolor{author in headline}{fg=berkblue}
\setbeamercolor{institute in headline}{fg=berkblue}

\setbeamercolor{framesubtitle}{fg=white, bg=berkblue}
\setbeamercolor{author in head/foot}{fg=white, bg=berkblue}
\setbeamercolor{title in head/foot}{fg=white, bg=berkblue}

\setbeamercolor{block body}{bg=white,fg=black}
\setbeamercolor{block title}{fg=white,bg=berkblue}
